name: "Appodeal"

platforms:
    armv7-android:
        context:
            env:
                - APP_APPODEAL_SDK_VERSION=4.0.0
                - APP_APPODEAL_ADAPTER_AMAZON_VERSION=11.1.1.0
                - APP_APPODEAL_ADAPTER_APPLOVIN_VERSION=13.5.1.0
                - APP_APPODEAL_ADAPTER_BIGO_ADS_VERSION=5.6.2.0
