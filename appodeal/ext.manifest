                - APP_APPODEAL_ADAPTER_MY_TARGET_VERSION=5.27.4.0
                - APP_APPODEAL_ADAPTER_UNITYADS_VERSION=4.16.4.0
                - APP_APPODEAL_ADAPTER_VUNGLE_VERSION=7.6.1.0
                - APP_APPODEAL_ADAPTER_YANDEX_VERSION=7.18.2.0
        bundle:
            resources:
                - "manifests/android/AndroidManifest.xml"
                - "manifests/android/build.gradle"
                - "manifests/android/proguard-rules.pro"
                - "manifests/android/res"

